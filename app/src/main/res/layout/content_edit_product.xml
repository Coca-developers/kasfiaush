<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="info.fandroid.navdrawer.EditProduct"
    tools:showIn="@layout/activity_edit_product">

    <!-- TODO: Update blank fragment layout -->
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:hint="Numele Produsului"
        android:id="@+id/editName"
   />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editProducator"
        android:hint="Producatorul"
 />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:id="@+id/editAnul"
        android:hint="Anul Fabricarii"
 />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:hint="Descrierea"
        android:id="@+id/editDescrierea"
 />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Choose image"
        android:id="@+id/EditImage"
     />


    <ImageView
        android:src="@android:drawable/star_big_on"
        android:layout_width="262dp"
        android:layout_height="74dp"
        android:id="@+id/ViewImageCurent"
        android:layout_marginBottom="56dp" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Register"
        android:id="@+id/buttonRegister"
        />

</LinearLayout>
